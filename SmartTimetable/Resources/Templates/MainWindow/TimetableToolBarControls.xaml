    <ControlTemplate x:Key="WeekAddButton" TargetType="{x:Type Button}">
        <Border Name="border" Background="{DynamicResource Color_AddWeekButtonBackground}" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ContentPresenter Content="{DynamicResource AddIco}" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Label Grid.Column="1" Content="{DynamicResource bAdd}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource Color_AddWeekButtonForeground}"></Label>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{DynamicResource ResourceKey=Color_AddWeekButtonBackgroundFocus}"></Setter>
            </Trigger>
